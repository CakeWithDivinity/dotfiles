{
  "editor.formatOnSave": true,
  "workbench.colorTheme": "Tokyo Night",
  "vim.smartRelativeLine": true,
  "vim.useSystemClipboard": true,
  "vim.useCtrlKeys": true,
  "vim.hlsearch": true,
  "vim.leader": "<space>",
  "vim.surround": true,
  "vim.handleKeys": {
    "<C-d>": true,
    "<C-s>": false,
    "<C-z>": false
  },
  "vim.normalModeKeyBindings": [
    { "before": ["C-d"], "after": ["C-d", "z", "z"] },
    { "before": ["C-u"], "after": ["C-u", "z", "z"] },
    { "before": ["C-\\"], "commands": ["workbench.action.splitEditor"] },
    { "before": ["L"], "commands": ["workbench.action.nextEditor"] },
    { "before": ["H"], "commands": ["workbench.action.previousEditor"] },
    { "before": ["K"], "commands": ["editor.action.showHover"] },
    {
      "before": ["<leader>", "c", "f"],
      "commands": ["editor.action.formatDocument"]
    },
    { "before": ["<leader>", "c", "r"], "commands": ["editor.action.rename"] },
    {
      "before": ["<leader>", "c", "a"],
      "commands": ["editor.action.quickFix"]
    },
    {
      "before": ["<leader>", "g", "r"],
      "commands": ["editor.action.goToReferences"]
    },
    {
      "before": ["<leader>", "g", "d"],
      "commands": ["editor.action.revealDefinition"]
    },
    {
      "before": ["<leader>", "g", "t"],
      "commands": ["workbench.action.terminal.toggleTerminal"]
    },
    {
      "before": ["<leader>", "b", "d"],
      "commands": ["workbench.action.closeActiveEditor"]
    },
    {
      "before": ["<leader>", "<leader>"],
      "commands": ["workbench.action.quickOpen"]
    }
  ],
  "vim.visualModeKeyBindings": [
    {
      "before": [">"],
      "commands": ["editor.action.indentLines"]
    },
    {
      "before": ["<"],
      "commands": ["editor.action.outdentLines"]
    }
  ],
  "extensions.experimental.affinity": {
    "vscodevim.vim": 1
  },
  "indentRainbow.colors": [
    "rgba(255,255,64,0.02)",
    "rgba(127,255,127,0.02)",
    "rgba(255,127,255,0.02)",
    "rgba(79,236,236,0.02)"
  ],
  "workbench.iconTheme": "material-icon-theme",
  "svelte.enable-ts-plugin": true,
  "terminal.integrated.fontFamily": "SauceCodePro Nerd Font Mono",
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  }
}
